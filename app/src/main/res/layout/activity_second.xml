<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:scaleType="centerCrop"
        android:src="@drawable/hamsterbackground3"/> <!-- Замените на ваше фоновое изображение -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="     created by\nMaxim Subachev"
        android:textColor="#FFD700"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/downloadButton"
        android:layout_width="132dp"
        android:layout_height="77dp"
        android:layout_marginTop="700dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:background="#FFD700"
        android:text="Скачать (кол-во всех тапов)" />



</RelativeLayout>
